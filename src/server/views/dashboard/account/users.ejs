<div class="row">
  <div class="col-12">
    <div class="card mb-3">
      <div class="card-header">
        <h5>Users</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-12 col-md-6 col-xl-4">
            <div class="account-invite-user rounded h-auto p-3">
              <h5 class="mb-3">Invite User</h5>
              <form action="/dashboard/account/user" method="post">
                <input type="hidden" name="_csrf" id="account_csrf" value="<%= csrfToken %>" />
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
                  <input type="text" class="form-control" id="inp_useremail" name="inp_useremail" placeholder="Email Address" aria-label="Email Address" aria-describedby="basic-addon1" />
                  <button id="btn-adduser" class="btn btn-success">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>
              </form>

            </div>
          </div>
          <div class="col-12 col-md-6 col-xl-8">
            <h5>User Invites</h5>
            <div id="account-user-invites-wrapper">

            </div>
            <hr>
            <h5>Users</h5>
            <div id="account-users-wrapper">

            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>