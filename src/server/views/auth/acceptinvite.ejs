<%- include('../includes/head.ejs') %>

<body>
  <div class="container-fluid main-container">

    <div class="row">
      <div class="col-12">
        <div class="logo"><img src="/public/images/ssm_logo_new_256.svg" /></div>
        <div class="login-card-wrapper">
          <div class="card border-dark login-card shadow bg-glass">
            <div class="card-body">
              <h4 class="card-title">Accept Your SSM Cloud Invite</h4>
              <div class="error-content"><%=errorMessage%></div>
              <form class="form-horizontal signup-form" method="post" action="">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

                <fieldset>
                  <h6 class="mt-3">User Details:</h6>
                  <p>
                    Please confirm your user details that was used to create
                    this account.
                  </p>
                  <div class="form-group required">
                    <label class="col-12 control-label" for="email">Email Address:</label>
                    <input id="email" name="email" placeholder="" class="form-control input-md" type="email" value="<%=oldInput.email%>" />
                  </div>

                  <div class="form-group required">
                    <label class="col-12 control-label" for="password">New Password:</label>
                    <input id="password" name="password" placeholder="" class="form-control input-md" type="password" value="<%=oldInput.password%>" />
                  </div>
                  <div class="form-group required">
                    <label class="col-12 control-label" for="confirmPassword">Confirm Password:</label>
                    <input id="confirmPassword" name="confirmPassword" placeholder="" class="form-control input-md" type="password" value="<%=oldInput.confirmPassword%>" />
                  </div>
                  <button class="btn btn-primary login-btn">
                    Accept Invite
                  </button>
                </fieldset>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../includes/footer.ejs') %>
  </div>
</body>