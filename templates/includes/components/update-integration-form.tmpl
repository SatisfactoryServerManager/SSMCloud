{{define "includes/components/update-integration-form"}}

{{$integration:=.integration}}
{{$globalEventTypes := .globalEventTypes}}

<div class="card mb-3 bg-glass">
    <div class="card-header">
        <h5>Update Integration</h5>
    </div>
    <div class="card-body">
        <form action="/dashboard/integrations/{{OIDtoString $integration.ID}}/update" method="post" class="edit-notification-form">
            {{ .csrfField }}
            <div class="row">
                <div class="col-12 col-lg-6">
                    <label for="name" class="form-label">Integration Name:</label>
                    <div class="input-group mb-2">
                        <span class="input-group-text"><i class="fas fa-tag" style="font-size:20px"></i></span>
                        <input class="form-control" type="text" name="name" id="name" value="{{$integration.Name}}">
                    </div>
                    <label for="type" class="form-label">Integration Type:</label>
                    <div class="input-group mb-2">
                        <span class="input-group-text"><i class="fas fa-bell" style="font-size:20px"></i></span>
                        <select name="type" id="type" class="form-select">
                            <option value="0" {{if eq $integration.Type 0}}selected{{end}}>Webhook</option>
                            <option value="1" {{if eq $integration.Type 1}}selected{{end}}>Discord</option>
                        </select>
                    </div>
                    <label for="url" class="form-label">Integration URL:</label>
                    <div class="input-group mb-2">
                        <span class="input-group-text"><i class="fas fa-globe" style="font-size:20px"></i></span>
                        <input class="form-control" type="text" name="url" id="url" value="{{$integration.Url}}">
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label">Selected Event Types:</label>
                    <div class="event-types-pills mb-3">
                        {{range $i, $e := $integration.EventTypes}}
                            <span class="badge rounded-pill bg-info mb-1" data-event-type="{{$e}}" style="font-size:12px">
                                {{$e}}
                                <i class="fas fa-times ms-1 float-end"></i>
                            </span>
                        {{end}}
                    </div>
                    <hr>
                    <label class="form-label">Add Event Types:</label>
                    <div class="input-group mb-2">
                        <span class="input-group-text"><i class="fas fa-list-check" style="font-size:20px"></i></span>
                        <select name="sel_add_event_type" id="sel_add_event_type" class="form-select">
                            {{range $e := $globalEventTypes}}
                                {{$found := false}}
                                {{range $eventType := $integration.EventTypes}}
                                    
                                    {{if eq $e $eventType}}
                                        {{$found = true}}
                                    {{end}}
                                {{end}}

                                {{if not $found}}
                                    <option value="{{$e}}">{{$e}}</option>
                                {{end}}
                            {{end}}
                        </select>
                        <button class="btn btn-success add-event-type">
                            <i class="fas fa-plus" style="font-size:20px"></i>
                        </button>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Update Integration</button>
            <a href="/dashboard/integrations/{{OIDtoString $integration.ID}}/delete" class="btn btn-danger float-end should-confirm-btn" data-confirm-title="Delete Integration"><i class="fas fa-trash"></i> Delete Integration</a>
        </form>
    </div>
</div>

{{end}}