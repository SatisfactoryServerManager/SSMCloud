{{define "includes/server/console"}}

    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex flex-column flex-md-row align-items-center mb-3">
                <h4 class="flex-grow-1 m-0">Console</h4>
                <a id="server-console-start-btn" href="/dashboard/serveraction/start?id={{.agent.Id}}" class="mt-2 mt-md-0 me-md-2">
                    <button class='btn btn-success server-action-btn w-100'><i class="fas fa-play me-1"></i>Start</button>
                </a>
                <a id="server-console-stop-btn" href="/dashboard/serveraction/stop?id={{.agent.Id}}" class="mt-2  mt-md-0">
                    <button class='btn btn-warning server-action-btn w-100'><i class="fas fa-stop me-1"></i>Stop</button>
                </a>
                <a id="server-console-kill-btn" href="/dashboard/serveraction/kill?id={{.agent.Id}}" class="mt-2  mt-md-0 ms-md-2">
                    <button class='btn btn-danger server-action-btn w-100'><i class="fas fa-skull-crossbones me-1"></i>Kill</button>
                </a>
            </div>
            <div class="server-console"></div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12 col-xl-6 mb-3">
            <div class="card border-secondary h-100">
                <div class="card-header">
                    <h5>CPU</h5>
                </div>
                <div class="card-body">
                    <div style="position: relative; height:300px;width:100%">
                        <canvas id="cpuChart" style="height:300px; width:100%"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6 mb-3">
            <div class="card border-secondary h-100">
                <div class="card-header">
                    <h5>RAM</h5>
                </div>
                <div class="card-body">
                    <div style="position: relative; height:300px;width:100%">
                        <canvas id="ramChart" style="height:300px; width:100%"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card border-secondary h-100 bg-glass mb-3">
                <div class="card-header">
                    <h5>Uptime</h5>
                </div>
                <div class="card-body">
                    <div style="position: relative; height:300px;width:100%">
                        <canvas id="uptimeChart" style="height:300px; width:100%"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{end}}