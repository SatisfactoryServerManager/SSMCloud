{{define "pages/dashboard/account"}}
{{template "includes/dashboard/head" .}}


<body>
    <div id="viewport" class="minimal">
        {{template "includes/dashboard/nav" .}}
        <div id="content">
            <div class="container-fluid">
                <!-- BODY -->
                <div class="page-container" data-page="dashboard">
                    {{template "includes/dashboard/page-header" .}}
                    <div class="row account-tabs-header">
                        <ul class="nav nav-tabs" role="tablist">
                             <li class="nav-item" role="presentation">
                                <a class="nav-link" data-bs-toggle="tab" href="#settings" aria-selected="false" role="tab" tabindex="-1">Settings</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" data-bs-toggle="tab" href="#users" aria-selected="false" role="tab">Users</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" data-bs-toggle="tab" href="#audit" aria-selected="true" role="tab">Audit</a>
                            </li>
                        </ul>
                    </div>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade" id="settings" role="tabpanel">
                            {{template "includes/account/settings" .}}
                        </div>
                        <div class="tab-pane fade" id="users" role="tabpanel">
                            {{template "includes/account/users" .}}
                        </div>
                        <div class="tab-pane fade" id="audit" role="tabpanel">
                            {{template "includes/account/audit" .}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

{{template "includes/dashboard/footer" .}}
{{end}}