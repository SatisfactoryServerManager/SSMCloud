{{define "pages/dashboard/integration"}}
{{template "includes/dashboard/head" .}}

{{$globalEventTypes := .globalEventTypes}}

<body>
    <div id="viewport" class="minimal">
        {{template "includes/dashboard/nav" .}}
        <div id="content">
            <div class="container-fluid">
                <!-- BODY -->
                <div class="page-container" data-page="dashboard">
                    {{template "includes/dashboard/page-header" .}}

                    <div class="row">
                        <div class="col-12">
                            {{template "includes/components/update-integration-form" (dict "integration" .integration "globalEventTypes" $globalEventTypes)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="card mb-3 bg-glass">
                                <div class="card-header">
                                    <h5>Integration Events</h5>
                                </div>
                                <div class="card-body">
                                    {{if not .integrationEvents}}
                                        <div class="alert alert-info">It looks like you have no integration events yet!</div>
                                    {{end}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


{{template "includes/dashboard/footer" .}}
{{end}}